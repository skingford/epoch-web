{
  "extends": "@epoch/tsconfig/vite.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "paths": {
      "@/*": [
        "./src/*"
      ],
    },
  },
  "include": [
    "./src/**/*.ts",
    "./types/**/*.d.ts",
    "./src/**/*.tsx",
    "./src/**/*.vue",
    "./vite.config.ts",
    "./config/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "public",
    "**/*.test.ts",
    "**/*.js"
  ]
}