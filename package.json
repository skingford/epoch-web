{
  "name": "epoch-monorepo",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean && rimraf node_modules",
    "dev": "turbo run dev",
    "format": "turbo run format",
    "lint": "turbo run lint",
    "lint:style": "turbo run lint:style",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@epoch/commitlint": "workspace:*",
    "@epoch/eslint": "workspace:*",
    "@epoch/prettier": "workspace:*",
    "@epoch/stylelint": "workspace:*",
    "husky": "^9.1.7",
    "rimraf": "^5.0.5",
    "stylelint": "^16.19.1",
    "turbo": "^2.5.3"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS"
    }
  },
  "packageManager": "pnpm@10.10.0"
}